doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Buddy Builder
    link(rel="stylesheet", href="/css/styles.css")
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f8fa;
        color: #333;
      }
      .container {
        display: flex;
        margin: 0 auto;
        max-width: 1200px;
        min-height: 100vh;
        background-color: white;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
      }
      .left-sidebar {
        width: 200px;
        min-width: 200px;
        background-color: white;
        border-right: 1px solid #ddd;
        padding: 20px 0;
      }
      .nav-button {
        display: block;
        background-color: #3b5998;
        color: white;
        text-align: center;
        padding: 12px;
        margin: 10px 15px;
        text-decoration: none;
        transition: background-color 0.2s;
        font-weight: bold;
        border: none;
        border-radius: 4px;
      }
      .nav-button:hover {
        background-color: #2d4373;
      }
      .main-area {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
      }
      .header {
        padding: 15px;
        border-bottom: 1px solid #ddd;
        background-color: white;
        display: flex;
        align-items: center;
      }
      .logo {
        display: flex;
        align-items: center;
        margin-right: 20px;
      }
      .logo-icon {
        border: 1px solid #3b5998;
        color: #3b5998;
        padding: 8px;
        margin-right: 10px;
      }
      .search-bar {
        display: flex;
        width: 400px;
        margin-left: 50px;
      }
      .search-input {
        padding: 8px 10px;
        width: 100%;
        border: 1px solid #ddd;
        border-radius: 4px 0 0 4px;
      }
      .search-button {
        background-color: #3b5998;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 0 4px 4px 0;
        cursor: pointer;
      }
      .content-area {
        display: flex;
        flex: 1;
        overflow: hidden;
      }
      .main-content {
        flex: 1;
        overflow-y: auto;
        border-right: 1px solid #ddd;
      }
      .post {
        padding: 15px;
        border-bottom: 1px solid #ddd;
      }
      .post-title {
        margin-top: 0;
        color: #3b5998;
      }
      .post-content {
        border: 1px solid #ddd;
        height: 130px;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        background-color: #f9f9f9;
      }
      .post-content:after {
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background: linear-gradient(to bottom right, transparent calc(50% - 1px), #ddd, transparent calc(50% + 1px)),
                    linear-gradient(to bottom left, transparent calc(50% - 1px), #ddd, transparent calc(50% + 1px));
      }
      .post-header {
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
      }
      .post-author {
        font-weight: bold;
        color: #3b5998;
      }
      .post-time {
        color: #777;
      }
      .post-description {
        margin: 10px 0;
        color: #444;
      }
      .comment-icon {
        text-align: right;
        color: #3b5998;
        margin-top: 5px;
        cursor: pointer;
      }
      .post-comments {
        margin-top: 15px;
        border-top: 1px dashed #ccc;
        padding-top: 10px;
      }
      .comments-title {
        font-size: 14px;
        color: #3b5998;
        font-weight: bold;
        margin-bottom: 8px;
      }
      .comment-line {
        background-color: #e9ebf5;
        height: auto;
        margin: 8px 0;
        border-radius: 5px;
        padding: 10px;
        border-left: 4px solid #3b5998;
      }
      .groups-sidebar {
        width: 200px;
        min-width: 200px;
        padding: 15px;
        background-color: white;
        overflow-y: auto;
      }
      .groups-title {
        text-align: center;
        font-size: 20px;
        margin: 0 0 15px 0;
        color: #3b5998;
        font-weight: bold;
      }
      .group-button {
        display: block;
        background-color: #3b5998;
        color: white;
        text-align: center;
        padding: 10px;
        margin: 10px 0;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.2s;
      }
      .group-button:hover {
        background-color: #2d4373;
      }
      /* Modal styles */
      .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.4);
        padding-top: 60px;
      }
      .modal-content {
        background-color: #fefefe;
        margin: 5% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
      }
      .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
      }
      .close:hover,
      .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
      }
  body
    .container
      .left-sidebar
        a.nav-button(href="/profile") My Profile
        a.nav-button(href="/chat") Chats
        a.nav-button(href="/add-post") Add Post
        a.nav-button(href="/about-us") About Us
        a.nav-button(href="/logout") Log-Out
      
      .main-area
        .header
          .logo
            .logo-icon ✉
            h2 Buddy Builder
          .search-bar
            input.search-input(type="text" placeholder="Search...")
            button.search-button Search
        
        .content-area
          .main-content
            if posts && posts.length
              each post in posts
                .post
                  h3.post-title #{post.title}
                  .post-content
                    if post.image
                      img(src=post.image, alt="Post content")
                  .post-header
                    .post-author #{post.name}
                    .post-time #{post.time}
                  .post-description #{post.content}
                  .comment-icon(onclick=`openModal(${post.id})`) ✉
                  .post-comments
                    .comments-title Comments
                    each comment in comments.filter(c => c.post_id === post.id)
                      .comment-line
                        .comment-author #{comment.fullname}
                        .comment-text #{comment.comment}
            else
              .post
                h3.post-title Post Title
                .post-content
                .post-header
                  .post-author User's Name
                  .post-time Post Time
                .post-description This is a description of the post .....
                .comment-icon(onclick="openModal()") ✉
              
              .post
                h3.post-title Post Title
                .post-content
                .post-header
                  .post-author User's Name
                  .post-time Post Time
                .post-description This is a description of the post .....
                .post-comments
                  .comments-title Comments (3)
                  .comment-line This is the first comment from a user discussing this post.
                  .comment-line Another user sharing their thoughts about the content.
                  .comment-line A third comment with additional feedback or questions.
                .comment-icon(onclick="openModal()") ✉
          
          .groups-sidebar
            h2.groups-title Groups
            if groups && groups.length
              each group in groups
                a.group-button(href=`/group/${group._id}`) #{group.name}
            else
              a.group-button(href="#") Group 1
              a.group-button(href="#") Group 2
              a.group-button(href="#") Group 3

    // Modal structure
    .modal#myModal
      .modal-content
        span.close(onclick="closeModal()") &times;
        h2 Write a Comment
        form(action="/submit-comment" method="POST")
          input(type="hidden" name="postId" id="postId")
          input(type="hidden" name="userId" value="1") 
          textarea(name="comment" rows="4" cols="50" placeholder="Write your comment here..." required)
          button(type="submit") Submit

    script.
      function openModal(postId) {
        document.getElementById('postId').value = postId;
        document.getElementById('myModal').style.display = 'block';
      }

      function closeModal() {
        document.getElementById('myModal').style.display = 'none';
      }

      // Close the modal when clicking outside of it
      window.onclick = function(event) {
        var modal = document.getElementById('myModal');
        if (event.target == modal) {
          modal.style.display = 'none';
        }
      }