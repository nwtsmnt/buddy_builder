doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Study Buddies
    link(rel="stylesheet", href="/css/chat.css")
  body
    .app-container
      header.app-header
        .logo
            img.logo-icon(src="/images/logo.jpeg" alt="Buddy Builder Logo")
        h1.app-title Study Buddies
        .header-buttons
            button.header-btn(type="button", onclick="window.location.href='/newsfeed'") Home
            button.header-btn(type="button", onclick="window.location.href='/profile'") Profile
            button.header-btn(type="button", onclick="window.location.href='/groups'") Groups
        .search-container
          input.search-input(type="text", placeholder="Search...")
          button.search-button Search
      
      main.app-content
        .sidebar.left-sidebar
          h2.sidebar-title Recent Chat
          .chat-list
            each val in [1]
              .chat-item
                button.close-btn X
                input.chat-name(type="text", placeholder="Boris - Roman")
            
        .chat-area
          .chat-header
            span.user-name User Name
            button.options-btn ⋮
          
          .messages-container
          
          .bottom-bar
            textarea.message-input(placeholder="This is text Box...")
            button.send-button →
            
        .sidebar.right-sidebar
          h2.sidebar-title Notes
          .notes-container
            textarea.notes-text
            button.save-button Save Notes
