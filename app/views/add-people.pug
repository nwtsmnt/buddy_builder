doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Study Buddies - Add People
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
    link(rel="stylesheet", href="/css/add-people.css")

  body
    .app-container
      nav.sidebar
        .logo
          i.fas.fa-graduation-cap
          span Study Buddies
        .nav-links
          a.nav-link(href="/newsfeed")
            i.fas.fa-home
            span Home
          a.nav-link(href="/profile")
            i.fas.fa-user
            span My Profile
          a.nav-link(href="/chat")
            i.fas.fa-comments
            span Chats
          a.nav-link(href="/groups")
            i.fas.fa-users
            span Groups
          a.nav-link.active(href="/add-people")
            i.fas.fa-user-plus
            span Add People
          a.nav-link(href="/add_post")
            i.fas.fa-plus-circle
            span Add Post
          a.nav-link(href="/about-us")
            i.fas.fa-info-circle
            span About Us
          a.nav-link(href="/logout")
            i.fas.fa-sign-out-alt
            span Log Out

      .main-content
        header.top-bar
          .search-container
            i.fas.fa-search
            input.search-input(type="text" placeholder="Search for study buddies...")
          .user-menu
            .profile-menu
              img.avatar(src="/images/default-avatar.png" alt="Profile")
              span.username User

        .scrollable-content
          .people-content
            .filters-sidebar
              .sidebar-header
                h3 Find Study Buddies
              
              .filter-section
                h4 Filter By
                
                .filter-group
                  h5 Subject
                  .filter-options
                    label.filter-option
                      input(type="checkbox", name="subject", value="math")
                      span Mathematics
                    label.filter-option
                      input(type="checkbox", name="subject", value="science")
                      span Science
                    label.filter-option
                      input(type="checkbox", name="subject", value="programming")
                      span Programming
                    label.filter-option
                      input(type="checkbox", name="subject", value="literature")
                      span Literature
                
                .filter-group
                  h5 Academic Level
                  .filter-options
                    label.filter-option
                      input(type="checkbox", name="level", value="freshman")
                      span Freshman
                    label.filter-option
                      input(type="checkbox", name="level", value="sophomore")
                      span Sophomore
                    label.filter-option
                      input(type="checkbox", name="level", value="junior")
                      span Junior
                    label.filter-option
                      input(type="checkbox", name="level", value="senior")
                      span Senior
                    label.filter-option
                      input(type="checkbox", name="level", value="graduate")
                      span Graduate
                
                .filter-group
                  h5 Availability
                  .filter-options
                    label.filter-option
                      input(type="checkbox", name="availability", value="weekday-morning")
                      span Weekday Mornings
                    label.filter-option
                      input(type="checkbox", name="availability", value="weekday-afternoon")
                      span Weekday Afternoons
                    label.filter-option
                      input(type="checkbox", name="availability", value="weekday-evening")
                      span Weekday Evenings
                    label.filter-option
                      input(type="checkbox", name="availability", value="weekend")
                      span Weekends
              
              button.apply-filters
                i.fas.fa-filter
                span Apply Filters
            
            .main-people-area
              .category-tabs
                .tab.active All People
                .tab Your Connections
                .tab.pending-requests-tab Pending Requests
                .tab Recommended
              
              // This people-grid will be populated with users from the database
              .people-grid
                // Loading indicator will be shown here before users are loaded
                .loading-indicator(style="text-align: center; padding: 30px;")
                  i.fas.fa-spinner.fa-spin(style="font-size: 32px; color: #666;")
                  p Loading users...
              
              .pagination
                button.pagination-btn.prev
                  i.fas.fa-chevron-left
                .pagination-pages
                  .page-number.active 1
                button.pagination-btn.next
                  i.fas.fa-chevron-right
          
          
          .content-area
            ul#user-list 

    script(src="/js/add-people.js")
