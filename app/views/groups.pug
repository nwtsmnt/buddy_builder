doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Study Buddies - Groups
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
    link(rel="stylesheet", href="/css/groups.css")

  body
    .app-container
      nav.sidebar
        .logo
          i.fas.fa-graduation-cap
          span Study Buddies
        .nav-links
          a.nav-link(href="/newsfeed")
            i.fas.fa-home
            span Home
          a.nav-link(href="/profile")
            i.fas.fa-user
            span My Profile
          a.nav-link(href="/chat")
            i.fas.fa-comments
            span Chats
          a.nav-link.active(href="/groups")
            i.fas.fa-users
            span Groups
          a.nav-link(href="/add_post")
            i.fas.fa-plus-circle
            span Add Post
          a.nav-link(href="/about-us")
            i.fas.fa-info-circle
            span About Us
          a.nav-link(href="/logout")
            i.fas.fa-sign-out-alt
            span Log Out

      .main-content
        header.top-bar
          .search-container
            i.fas.fa-search
            input.search-input(type="text" placeholder="Search groups...")
          .user-menu
            .profile-menu
              img.avatar(src="/images/default-avatar.png" alt="Profile")
              span.username User

        .scrollable-content
          .groups-content
            .my-groups-sidebar
              .sidebar-header
                h3 My Groups
                button.create-group-btn
                  i.fas.fa-plus
                  span Create Group
              
              .groups-list
                each val in [1, 2, 3, 4, 5]
                  .group-item(class=val === 1 ? 'active' : '')
                    .group-icon
                      if val % 2 === 0
                        i.fas.fa-graduation-cap
                      else if val % 3 === 0
                        i.fas.fa-flask
                      else
                        i.fas.fa-calculator
                    .group-info
                      .group-name CS#{val}01 - Study Group
                      .group-members
                        i.fas.fa-users
                        span #{val * 5} members
                    if val % 4 === 0
                      .unread-badge 3
              
              .joined-categories
                h4 Categories
                .category-tags
                  .category-tag Math
                  .category-tag Science
                  .category-tag Programming
                  .category-tag Literature
                  .category-tag History
            
            .main-group-area
              .featured-group-banner
                .featured-group-info
                  h2 Welcome to Groups
                  p Connect with fellow students, join study groups, and collaborate on projects.
                .featured-actions
                  button.banner-btn
                    i.fas.fa-compass
                    span Discover Groups
              
              .content-tabs
                .tab.active Discover
                .tab Your Groups
                .tab Recommended
                .tab Trending
              
              .groups-grid
                each val in [1, 2, 3, 4, 5, 6]
                  .group-card
                    .group-card-header(class=`bg-${val % 5 + 1}`)
                      .group-privacy
                        i.fas.fa-globe
                      .group-members-count #{val * 13} members
                    
                    .group-card-content
                      .group-avatar
                        if val % 3 === 0
                          i.fas.fa-flask
                        else if val % 2 === 0
                          i.fas.fa-code
                        else
                          i.fas.fa-book
                      h3.group-card-title #{['Physics', 'Programming', 'Calculus', 'Literature', 'Chemistry', 'History'][val % 6]} Study Group
                      p.group-card-description A group dedicated to helping each other master #{['Physics', 'Programming', 'Calculus', 'Literature', 'Chemistry', 'History'][val % 6]} concepts and ace exams.
                    
                    .group-card-footer
                      .group-activity
                        i.fas.fa-bolt
                        span Active
                      button.join-btn Join Group
              
              .pagination
                button.pagination-btn.prev
                  i.fas.fa-chevron-left
                .pagination-pages
                  .page-number.active 1
                  .page-number 2
                  .page-number 3
                button.pagination-btn.next
                  i.fas.fa-chevron-right
            
            .group-recommendations
              .rec-header
                h3 Recommended for You
                button.refresh-btn
                  i.fas.fa-sync-alt
              
              .rec-items
                each val in [1, 2, 3, 4]
                  .rec-group
                    .rec-icon
                      if val % 2 === 0
                        i.fas.fa-laptop-code
                      else
                        i.fas.fa-chart-line
                    .rec-info
                      h4 #{['Data Science', 'Web Development', 'Statistics', 'Mobile Apps'][val - 1]} Group
                      .rec-details #{val * 7} members â€¢ Active
                    button.quick-join-btn
                      i.fas.fa-plus
              
              .trending-topics
                h4 Trending Topics
                ul.topic-list
                  li.topic-item
                    span.topic-name #FinalExams
                    span.topic-count 256 groups
                  li.topic-item
                    span.topic-name #ProjectCollaboration
                    span.topic-count 189 groups
                  li.topic-item
                    span.topic-name #ResearchPapers
                    span.topic-count 142 groups
                  li.topic-item
                    span.topic-name #StudyAbroad
                    span.topic-count 98 groups

          .create-group-modal
            .modal-content
              .modal-header
                h2 Create New Study Group
                button.close-modal
                  i.fas.fa-times
              form.create-group-form
                .form-group
                  label(for="group-name") Group Name
                  input#group-name(type="text" placeholder="Enter a name for your group")
                
                .form-group
                  label(for="group-category") Category
                  select#group-category
                    option(value="" disabled selected) Select a category
                    option(value="math") Mathematics
                    option(value="science") Science
                    option(value="programming") Programming
                    option(value="literature") Literature
                    option(value="history") History
                    option(value="other") Other
                
                .form-group
                  label(for="group-description") Description
                  textarea#group-description(placeholder="Describe what your group is about")
                
                .form-group
                  label Privacy
                  .toggle-options
                    .toggle-option
                      input#public-option(type="radio" name="privacy" value="public" checked)
                      label(for="public-option") Public
                    .toggle-option
                      input#private-option(type="radio" name="privacy" value="private")
                      label(for="private-option") Private
                
                .form-actions
                  button.cancel-btn(type="button") Cancel
                  button.create-btn(type="submit") Create Group